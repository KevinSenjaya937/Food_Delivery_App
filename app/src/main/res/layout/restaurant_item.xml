<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/restaurantNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Test"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/logoImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/restaurantTypeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Test"
        android:paddingLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/restaurantNameText"
        app:layout_constraintLeft_toRightOf="@id/logoImageView"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/locationText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Test"
        android:paddingLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/restaurantTypeText"
        app:layout_constraintLeft_toRightOf="@id/logoImageView"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>